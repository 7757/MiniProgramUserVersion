.root {
  width: 100%;
  height: 100%;
}

/* 上部布局 */

.order_up {
  display: flex;
  margin: 64rpx 46rpx 74rpx 46rpx;
  align-items: flex-end;
}

.up_right {
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
  height: 158rpx;
  justify-content: space-around;
}

/* 店铺名称 */

.up_right .shop_name {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(22, 8, 10, 0.6);
  line-height: 24rpx;
}

/* 课程名称 */

.up_right .class_name {
  width: 392rpx;
  height: 90rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(22, 8, 10, 1);
  line-height: 44rpx;
}

/* 有效期 */

.up_right .term_validity {
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(22, 8, 10, 0.6);
  line-height: 22rpx;
}

/* 图片大小 */

.order_up image {
  width: 208rpx;
  height: 158rpx;
  border-radius: 14rpx;
}

/* 中部布局 */

.order_and {
  margin: 0rpx 46rpx 56rpx 46rpx;
  border-bottom: 2rpx solid rgba(225, 226, 225, 1);
  padding-bottom: 40rpx;
}

/* 推荐人 */

.order_ands {
  margin: 0rpx 46rpx 56rpx 46rpx;
  border-bottom: 2rpx solid rgba(225, 226, 225, 1);
  padding-bottom: 30rpx;
}

/* input块布局 */

.input_flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 框的宽度 */

.input {
  width: 550rpx;
}

/* 用户信息 */

.user_info {
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(22, 8, 10, 1);
  line-height: 30rpx;
  margin-bottom: 58rpx;
}

/* input框的标题 */

.input_title {
  width: 84rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(22, 8, 10, 1);
  line-height: 28rpx;
}

/* 底部 布局 */

.order_dowm {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  margin: 0rpx 46rpx 0rpx 46rpx;
  padding-bottom: 300rpx;
}

/* 标题 */

.dowm_List_title {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(22, 8, 10, 1);
  line-height: 24rpx;
}

.down_list_details {
  width: 624rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(22, 8, 10, 1);
  line-height: 24rpx;
}

.down_list_btn {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(50, 133, 139, 1);
  line-height: 24rpx;
}

/* 底部按钮 */

.bottom_bar {
  background: #fff;
  z-index: 999;
  width: 100%;
  border-top: 1px;
  display: flex;
  position: fixed;
  bottom: 0px;
  box-shadow: 0px 1px 4px 1px rgba(195, 194, 194, 0.5);
  padding-top: 17px;
  padding-bottom: 17px;
}

.reset {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  width: 186rpx;
  height: 94rpx;
  font-size: 30rpx;
  font-weight: 600;
  line-height: 94rpx;
  text-align: center;
  color: rgb(8, 8, 8);
  margin-left: 23px;
}

/* 总价 */

.order_price {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(22, 8, 10, 1);
  line-height: 28rpx;
}

/* 价格明细 */

.price_details {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(21, 127, 131, 1);
  line-height: 26rpx;
}

/* 微信支付 */

.next_btn {
  width: 360rpx;
  height: 96rpx;
  background: rgba(248, 98, 96, 1);
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 94rpx;
  text-align: center;
  position: absolute;
  right: 23px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.next_btn image {
  width: 42rpx;
  height: 38rpx;
  margin-right: 10rpx;
}

/*使屏幕变暗  */

.layer_shown {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1;
  color: #fff;
}

/*对话框 */

.layer_shown_box {
  height: 70vh;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2;
  background: #fff;
  padding-top: 20rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

/* 弹出层布局 */

/* 弹出层上方 */

.price_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 48rpx 46rpx 0rpx 46rpx;
  padding-bottom: 66rpx;
  border-bottom: 2rpx solid rgba(239, 238, 238, 1);
}

.bolck {
  width: 50rpx;
  height: 50rpx;
}

.bolck image {
  width: 30rpx;
  height: 30rpx;
}

.price_title {
  width: 138rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: rgba(22, 8, 10, 1);
  line-height: 34rpx;
}

/* 弹框中间布局 */

.price_and {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  margin: 48rpx 46rpx 0rpx 46rpx;
  padding-bottom: 48rpx;
  border-bottom: 2rpx solid rgba(239, 238, 238, 1);
}

.and_title {
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(22, 8, 10, 1);
  line-height: 30rpx;
  margin-bottom: 40rpx;
}

.and_item {
  width: 100%;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(22, 8, 10, 1);
  line-height: 28rpx;
  margin-bottom: 38rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 下部布局 */

.price_down {
  margin: 48rpx 46rpx 48rpx 46rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(22, 8, 10, 1);
  line-height: 30rpx;
}

/* 常见问题弹窗 */

.layer_shown {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */

.layer_shown_box {
  height: 80vh;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

/* 内容信息 */

.content_info {
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(22, 8, 10, 1);
  line-height: 40rpx;
}

.scrool_style {
  height: 800rpx;
  width: 90%;
  margin: 0 auto;
  padding-bottom: 20rpx;
}

/* 标题 */

.top_teacher {
  width: 90%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 34rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(22, 8, 10, 1);
  line-height: 34rpx;
  margin-bottom: 90rpx;
}

/* 按钮 */

.top_teacher image {
  width: 30rpx;
  height: 30rpx;
  padding: 20rpx;
}

.teacher_title {
  font-size: 34rpx;
  font-weight: 600;
  color: rgba(22, 8, 10, 1);
}
