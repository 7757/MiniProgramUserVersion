.content {
  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
  display: flex;
}
.data_root {
  width: 100%;
  height: 92rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 40rpx;
}

.week {
  margin-left: 90rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-around;
  font-size: 26rpx;
  font-weight: 600;
  color: rgba(22, 8, 10, 1);
  line-height: 36rpx;
}

.data_info {
  margin-left: 90rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-around;
  font-size: 20rpx;
  font-weight: 500;
  color: rgba(22, 8, 10, 1);
  line-height: 28rpx;
}

.content_list_item {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  position: relative;
}
.class_item {
  width: 80rpx;
  border-radius: 6rpx;
  border: 2rpx solid rgba(0, 154, 160, 1);
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 154, 160, 1);
  line-height: 26rpx;
  position: absolute;
}


.content_list_bottom {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-content: space-between;
}
.class_info_content {
  width: 66rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 154, 160, 1);
  line-height: 26rpx;
  margin: 0 auto;

  display: flex;
  flex-direction: column;
  justify-content: space-between;
  justify-items: center;
}

