/* 根节点 */

page {
  width: 100%;
  height: 100;
}

.root {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 100%;
}

/* 地图父容器 */

.moving_graph {
  width: 100%;
  height: 456rpx;
}

/* 顶部内容 */

.root .nav_bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 30rpx 0rpx 30rpx -440rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(22, 8, 10, 1);
  line-height: 26rpx;
}

.root .nav_bar .nav_list {
  padding-right: 10rpx;
}

.root .nav_bar .nav_item {
  padding-right: 18rpx;
}

.root .nav_bar image {
  width: 8rpx;
  height: 16rpx;
}

.shop_distance image {
  width: 16rpx;
  height: 20rpx;
}

.contenter {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.contenter .top_tip {
  margin-top: 20rpx;
  margin-bottom: 24rpx;
  width: 72rpx;
  height: 10rpx;
  background: rgba(233, 232, 232, 1);
  border-radius: 4rpx;
}

/* 店铺卡片 */

.contenter .address_list {
  display: flex;
  align-items: center;
  width: 638rpx;
  height: 254rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 10rpx 4rpx rgba(229, 227, 227, 0.5);
  border-radius: 8rpx;
  margin: 20rpx;
  padding-left: 36rpx;
}

/* 卡片左 */

.contenter .address_list .list_left {
  width: 484rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}

/* 卡片中 */

.contenter .address_list .list_center {
  background-color: rgba(242, 241, 242, 1);
  width: 2rpx;
  height: 180rpx;
}

/* 卡片左边 */

.contenter .address_list .list_right {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(22, 8, 10, 0.8);
  line-height: 24rpx;
  margin: 0rpx 50rpx;
  padding: 20px 0px;
}

.list_left .shop_name {
  height: 30rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: rgba(22, 8, 10, 1);
  line-height: 30rpx;
  margin-bottom: 20rpx;
}

.list_left .shop_distance {
  margin-bottom: 18rpx;
  height: 22rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(22, 8, 10, 1);
  line-height: 22rpx;
}

.list_left .location {
  margin-bottom: 12rpx;
  width: 360rpx;
  height: 67rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(163, 158, 158, 1);
  line-height: 34rpx;
}

.list_left .business_hours {
  height: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(163, 158, 158, 1);
  line-height: 24rpx;
}

.wsui-btn__hover_list {
  opacity: 0.9;
  transform: scale(1.06, 1.06);
}

.item {
  color: rgba(163, 158, 158, 1);
}

.contenxt {
  margin-top: 40rpx;
}




/* 距离提示框 */

.mask_layer {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.modal_box {
  width: 80%;
  overflow: hidden;
  position: fixed;
  top: 54%;
  left: -18rpx;
  z-index: 1001;
  background: #fafafa;
  margin: -150px 12% 0 12%;
  border-radius: 5px;
}

.title {
  padding:10px 15px 10px 15px;
  text-align: center;
  background-color: gazure;

  font-size:30rpx;
  font-weight:600;
  color:rgba(22,8,10,1);
  line-height:45rpx;



}

.content {
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}

.input_show1 {
  margin: 0 auto;
  width: 80%;
  margin-left: 10%;
  font-size: 32rpx;
  text-align: center;
}

.btn1 {
  width: 100%;
  margin-top: 65rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  
  background-color: white;
}

.cancel {
  width: 100%;
  padding: 10px;
  text-align: center;
  color: black;
  font-weight:600;
  border-top: 1px solid #d0d0d0;
}

.Sure {
  width: 100%;
  padding: 10px;
  color: #f1d4ae;
  background-color: white;
  border-left: 1px solid #d0d0d0;
  text-align: center;
  font-weight:600;
  border-top: 1px solid #d0d0d0;
}

.modalMsg {
  text-align: center;
  margin-top: 45rpx;
  display: block;
}
