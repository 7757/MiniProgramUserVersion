.root{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  
}

.root .top{

  display: flex;
  align-items: center;
  width: 90%;
  margin: 0 auto;
  padding: 20rpx 0rpx 18rpx 0rpx;
  border-bottom: 2rpx solid  rgba(238, 238, 238, 1);
}


.root .top .city{
  width: 90rpx;                                   
  height: 92rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(22,8,10,1);
  line-height:76rpx;
  margin-right: 88rpx;
  margin-bottom: -22rpx;
  border-bottom: 6rpx solid transparent;
}

.root .top .area{
  width: 112rpx;                                   
  height: 92rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(22,8,10,1);
  line-height:76rpx;
  margin-right: 88rpx;
  margin-bottom: -22rpx;
  border-bottom: 6rpx solid transparent;
  
}
.root .top .city.active{
  border-bottom: 6rpx solid black;
}

.root .top .area.active{
  border-bottom: 6rpx solid black;
}

/* 底部内容 */

.root .bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin: 0 auto;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(22,8,10,1);
  line-height:28rpx;
}

/* 区域 */

.item_list{
  padding-bottom: 60rpx;
  width: 100%;
}



/* 选中图标 */
.root .bottom image{  
width:24rpx;
height:18rpx;

}

.bottom_city{
  width: 100%;
  margin-top: 36rpx;
}