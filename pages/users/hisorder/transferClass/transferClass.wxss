/*************************************显示和隐藏的弹框********************************************/

.weui-demo-dialog {
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.weui-half-screen-dialog {
  transition: all 0.3s;
  transform: translateY(100%);
}

.weui-demo-dialog_show {
  visibility: visible;
  opacity: 1;
}

.weui-demo-dialog_show .weui-half-screen-dialog {
  transform: translateY(0);
}


.weui-half-screen-dialog__desc {
  font-size: 15px;
  font-weight: 600;
  color: rgba(22, 8, 10, 1);
}


.addphone_show {
  visibility: hidden;
  transition: all 0.1s;
}

.toaddress_show {
  visibility: hidden;
  transition: all 0.1s;
}
.addphone_hide{
  visibility: visible;
  
  transition: all 1s;
}
.toaddress_hide{
  visibility: visible;
  transition: all 1s;
}
