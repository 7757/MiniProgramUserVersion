page {
  background-color: white;
  margin: 0;
  padding: 0;
}

.content {
  display: flex;
  width: 85%;
  height: 246rpx;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  border-bottom: 1rpx solid  rgba(225, 226, 225);
  margin: 0 auto;
}

.images {
  margin-top: 48rpx;
  margin-left: 48rpx;
}

/* 主图样式 */

.h_images {
  width: 200rpx;
  height: 150rpx;
  border-radius: 6rpx;
}

.h_content {
  margin-top: 46rpx;
  height: 150rpx;
  width: 120%;
}

/* 订单名样式 */

.h_title {
  font-size: 28rpx;
  color: rgba(22, 8, 10, 0.8);
}

/* 时间样式 */

.h_summary {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgba(22, 8, 10, 0.8);
}

.h_button{
  margin: 0;
  margin-top: 32rpx;
  height: 50rpx;
  width:236rpx;
  text-align: center;
  font-size: 24rpx;
  color: rgba(0, 132, 137);
  line-height: 50rpx;

 
  border-radius:4rpx;
  border:2rpx solid rgba(0,132,137,1);
  padding: 5rpx 70rpx;
  
  position: relative;

}
.h_button image{
  width:66rpx;
  height:34rpx;
  position: absolute;
  bottom:20rpx;
  right: -8rpx;
}
