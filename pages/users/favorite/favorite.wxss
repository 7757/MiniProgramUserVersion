page {
  background-color: white;
  margin: 0;
  padding: 0;
}
.content {
  display: flex;
  width: 100%;
  height: 246rpx;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(178rpx);
  transform: translateX(178rpx);
  margin-left: -130rpx;
  border-bottom: 1rpx solid rgba(225, 226, 225);
  border-left: 48rpx;
}
.images{
  margin-top:48rpx;
}
/* 主图样式 */
.f_images {
  width: 200rpx;
  height: 150rpx;
  border-radius: 12rpx;
}

.f_content {
  margin-top:46rpx;
  margin-left:28rpx; 
  height: 150rpx;
}

/* 小标题样式 */

.f_title {
  font-size: 24rpx;
  color: rgba(22, 8, 10, 0.6);
}

/* 简介 */

.f_summary {
  width: 80%;
  font-size: 28rpx;
  color: rgba(22, 8, 10, 0.8);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
}

/* 价格 */

.f_price {
  font-size: 24rpx;
  color: rgba(22, 8, 10, 0.8);
  display: inline-block;
}

.f_xap {
  margin-left:16rpx;
  display: inline-block;
}

/* 评分五角星样式 */

.f_xingp {
  height: 20rpx;
  width: 24rpx;
}

/* 评分数字样式 */

.f_point {
  display: inline-block;
  font-size: 22rpx;
  color: rgba(21, 127, 131);
}

.touch-item {
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
}

/* 删除按钮 */

.del {
  background-color: rgba(0, 132, 137);
  width: 192rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255);
  font-size: 30rpx;
  -webkit-transform: translateX(180rpx);
  transform: translateX(180rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  margin-right:-11rpx; 
}

.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
